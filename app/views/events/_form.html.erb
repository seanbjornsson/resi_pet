<%= form_for([@event], html: { class: 'form-horizontal' }) do |f| %>
  <%= bootstrap_panel(Event.human_attribute_name(:basic_information)) do %>
    <div class="form-group">
      <%= f.label :start_datetime, Event.human_attribute_name(:start_datetime), class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.datetime_select :start_datetime, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :end_datetime, Event.human_attribute_name(:end_datetime), class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.datetime_select :end_datetime, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :room_id, Event.human_attribute_name(:room), class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.select :room_id, options_for_select(@rooms), class: "form-control" %>
      </div>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit button, class: "btn btn-submit", data: { disable_with: t('form.disable_with') } %>
  </div>
<% end %>
